#!/usr/bin/env node
Mainframe = require './mainframe'
exe = require './executer'
program = require 'commander'

mf = new Mainframe()

program
  .version '0.0.1'

program
  .command('setup')
  .description('interactive session that will help you setup the server')
  .action () -> mf.setup() 

program
  .command('update')
  .description('update and upgrade all system packages')
  .action () -> mf.update()

program
  .command('upgrade')
  .description('upgrade the server')
  .action () -> mf.upgrade()

program
  .command('reboot')
  .description('reboot the server')
  .action () -> mf.reboot()

program
  .command('memory')
  .description('display memory use on system')
  .action () -> mf.memory()

program
  .command('set-hostname')
  .description('set the systems hostname')
  .action (newHostname) -> mf.setHostname(newHostname)

program.parse process.argv
